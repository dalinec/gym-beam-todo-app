generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model TodoList {
  id    String @id @default(uuid())
  name  String @unique
  todos Todo[]
}

model Todo {
  id         String    @id @default(uuid())
  name       String
  completed  Boolean   @default(false)
  priority   Int
  dueDate    DateTime?
  tags       String[]
  todoListId String
  todoList   TodoList  @relation(fields: [todoListId], references: [id])
}
